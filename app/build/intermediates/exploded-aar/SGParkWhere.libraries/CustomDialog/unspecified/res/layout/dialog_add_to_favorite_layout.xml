<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_cover">

    <TextView
        android:id="@+id/tv_title"
        style="@style/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adding To Favorite"/>

    <FrameLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/xlarge_space"/>

    <LinearLayout
        android:layout_below="@id/ll_content"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_negative"
            style="@style/dialog_button_negative"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skip"/>

        <Button
            android:id="@+id/btn_positive"
            style="@style/dialog_button_positive"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ok"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/VietHoa/Work/AndroidStudioProjects/Originally/SGParkWhere/libraries/CustomDialog/src/main/res/layout/dialog_add_to_favorite_layout.xml -->